                    @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" hidden="hidden">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Nama User</label>
                <div class="col-sm-7">
