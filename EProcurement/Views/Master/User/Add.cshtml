                    @Html.ValidationMessageFor(model => model.Group_VendorID)
                </div>
            </div>

            @*<div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Email</label>
                    <div class="col-sm-7">
